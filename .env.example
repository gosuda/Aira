# Aira — Environment Variables
# Copy to .env and adjust values for your environment.

# ── Database (PostgreSQL) ──────────────────────────────────────────
AIRA_DB_HOST=localhost
AIRA_DB_PORT=5432
AIRA_DB_USER=aira
AIRA_DB_PASSWORD=aira
AIRA_DB_NAME=aira_dev
AIRA_DB_SSLMODE=disable
AIRA_DB_MAX_CONNS=25

# ── Redis ──────────────────────────────────────────────────────────
AIRA_REDIS_ADDR=localhost:6379
AIRA_REDIS_PASSWORD=
AIRA_REDIS_DB=0

# ── JWT ────────────────────────────────────────────────────────────
AIRA_JWT_SECRET=change-me-in-production
AIRA_JWT_ACCESS_TTL=15m
AIRA_JWT_REFRESH_TTL=168h

# ── Server ─────────────────────────────────────────────────────────
AIRA_SERVER_ADDR=:8080
AIRA_SERVER_READ_TIMEOUT=10s
AIRA_SERVER_WRITE_TIMEOUT=30s

# ── Slack ──────────────────────────────────────────────────────────
AIRA_SLACK_BOT_TOKEN=xoxb-your-bot-token
AIRA_SLACK_SIGNING_SECRET=your-signing-secret
AIRA_SLACK_APP_TOKEN=xapp-your-app-token

# ── Docker (Agent Containers) ─────────────────────────────────────
AIRA_DOCKER_HOST=unix:///var/run/docker.sock
AIRA_DOCKER_IMAGE_DEFAULT=ghcr.io/gosuda/aira-agent:latest
AIRA_DOCKER_CPU_LIMIT=2
AIRA_DOCKER_MEM_LIMIT=2g

# ── Self-Hosted Mode ──────────────────────────────────────────────
AIRA_SELF_HOSTED=false
